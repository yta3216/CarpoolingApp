<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#839CABC2"
    android:orientation="vertical">

    <!-- Header Card with Sorting -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="257dp"
        android:layout_gravity="top"
        android:layout_marginTop="-20dp"
        app:cardBackgroundColor="#788DAD"
        app:cardCornerRadius="30dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:background="#788DAD"
            android:paddingStart="10dp"
            app:navigationIcon="@drawable/white_arrow"
            app:titleTextColor="@color/white" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="120dp"
            android:text="Sorted by"
            android:textColor="#FFFFFFFF"
            android:textSize="17sp" />

        <Spinner
            android:id="@+id/sortSpinner"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="145dp"
            android:background="@android:drawable/btn_dropdown"
            android:popupBackground="#FFFFFF"
            android:spinnerMode="dropdown" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="220dp"
            android:layout_marginTop="155dp"
            android:text="Cheapest"
            android:textColor="#FFFFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="gone" />

    </androidx.cardview.widget.CardView>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ridesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="-30dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:padding="16dp"
        android:paddingTop="30dp" />

    <!-- Demo Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/demoButton"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="ðŸ“ Demo: See booking walkthrough"
        android:textColor="@color/primary_blue"
        android:textSize="14sp" />

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/emptyState"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:alpha="0.3"
            android:contentDescription="No rides"
            android:src="@android:drawable/ic_menu_search" />

        <TextView
            android:id="@+id/emptyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:text="No rides found"
            android:textAlignment="center"
            android:textColor="@color/text_secondary"
            android:textSize="16sp" />

        <!-- Demo Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/demoWalkthroughButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:text="Can't find one? Try Demo Booking"
            android:textColor="@color/primary_blue"
            app:cornerRadius="20dp"
            app:strokeColor="@color/primary_blue" />

    </LinearLayout>

</LinearLayout>