<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#839CABC2"
    android:orientation="vertical">

    <!-- Header Card with Sorting -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_gravity="top"
        android:layout_marginTop="-30dp"
        app:cardBackgroundColor="#788DAD"
        app:cardCornerRadius="30dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/status_inactive"
            android:elevation="4dp"
            android:paddingStart="20dp"
            android:layout_marginTop="30dp"
            app:navigationIcon="@drawable/white_arrow"
            app:title="Search Results"
            app:titleTextColor="@color/white" />

        <TextView
            android:id="@+id/sortLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="90dp"
            android:text="@string/sorted_by_label"
            android:textColor="#FFFFFFFF"
            android:textSize="17sp" />

        <Spinner
            android:id="@+id/sortSpinner"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="115dp"
            android:background="@android:drawable/btn_dropdown"
            android:popupBackground="#FFFFFF"
            android:spinnerMode="dropdown" />

        <TextView
            android:id="@+id/filterLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="160dp"
            android:text="@string/filtered_by_label"
            android:textColor="#FFFFFFFF"
            android:textSize="17sp" />

        <Spinner
            android:id="@+id/filterSpinner"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="185dp"
            android:background="@android:drawable/btn_dropdown"
            android:popupBackground="#FFFFFF"
            android:spinnerMode="dropdown" />

    </androidx.cardview.widget.CardView>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingBottom="16dp">

            <!-- Available Rides Section -->
            <TextView
                android:id="@+id/hostingRidesHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available Rides"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/primary_blue"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/hostingRidesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:isScrollContainer="false"
                android:nestedScrollingEnabled="false" />

            <!-- Ride Requests Section -->
            <TextView
                android:id="@+id/requestRidesHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ride Requests"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/status_active"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/requestRidesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:isScrollContainer="false"
                android:nestedScrollingEnabled="false" />

            <!-- Empty State -->
            <LinearLayout
                android:id="@+id/emptyState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone"
                android:paddingVertical="32dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:alpha="0.3"
                    android:src="@android:drawable/ic_menu_search"
                    android:contentDescription="No rides" />

                <TextView
                    android:id="@+id/emptyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/empty_all_rides"
                    android:textColor="@color/text_secondary"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Demo Button - Always visible at bottom -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/demoButton"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="ðŸŽ¬ Try Demo Booking"
        android:textColor="@color/primary_blue"
        app:strokeColor="@color/primary_blue"
        app:cornerRadius="20dp"
        android:paddingVertical="12dp" />

</LinearLayout>